<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @articles.each do |article| %>
        <div class="col">
          <a href="restaurants/<%= article[:id] %>">
            <div class="card h-100">
              <img src="https://source.unsplash.com/random/1000x500" class="card-img-top" alt="Random unsplash image">
              <div class="card-body">
                <h5 class="card-title text-dark"><%= article.title %></h5>
                <p class="card-text text-dark"><%= article.content %></p>
              </div>
              <div class="card-footer">
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
              </div>
            </div>
          </a>
        </div>
    <% end %>
  </div>
</div>
